.badge{
  position: absolute;
  z-index: 9;
  transform: rotate(-45deg);
  top: 22px;
  left: -38px;
  background: green;
  color: #fff;
  width: 270rpx;
  text-align: center;
}
.issue_history{
  width: 100%;
  /* height: 2000rpx; */
  overflow: auto;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 50rpx;
}
.activity-content{
  display: flex;
  justify-content: space-between;
  margin: 50rpx 30rpx;
}
.activity_img{}
.back_img{
  background: url('http://iph.href.lu/200x200');
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  height: 150rpx;
  width: 150rpx;
}
.title text{
  font-size: 34rpx;
}
.date text{
  font-size: 28rpx;
}
.content{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 72%;
}
.content .title{
  color: #333
}
.content .date{
  color: #ccc
}